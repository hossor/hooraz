<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroundLoginColor"

    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="340dp">

        <View
            android:id="@+id/HeaderSignUp"
            android:layout_width="match_parent"
            android:layout_height="340dp"

            android:background="@drawable/rectangle_6"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="115dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/cactusfont"

            android:gravity="center"
            android:text="CRYPTOVERS"
            android:textColor="#000" />" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="189dp"
        android:layout_height="79dp"
        android:layout_marginLeft="30dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/kufamblack"
        android:gravity="left"
        android:text="SignUp"
        android:textColor="#000" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/UsernameSign"
        style="@style/InputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/usernamemailcorner"
        android:baselineAligned="false"
        android:hint="Email"
        android:textColorHint="#000"
        app:boxCornerRadiusTopEnd="60dp"
        app:hintTextColor="@color/Dark_Green">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
android:id="@+id/EmailEdit"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HeaderSignUp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/usernamemailcorner"

            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"

        android:baselineAligned="false"
        android:hint="Username"
        android:textColorHint="#000"
        app:hintTextColor="@color/Dark_Green">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
android:singleLine="true"
            android:id="@+id/UsernameEdit"
            android:layout_height="wrap_content"
            android:background="#fff" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordSignUp"

        style="@style/InputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/password"
        android:hint="Password"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textColorHint="#000"
        app:hintTextColor="@color/Dark_Green"
        tools:ignore="RtlCompat">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEdit"
            android:background="@drawable/password"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/SignUpButton"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/PasswordSignUp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/buttonbackground">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/group_16" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"

            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="SIGN UP"
            android:textColor="#fff"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <TextView
        android:id="@+id/SignUpToLogin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:text="@string/LoginString" />
</LinearLayout>